<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/col0">
        <TextView
            android:id="@+id/tvNazivOglasaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv oglasa"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/DodgerBlue"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvTekstOglasaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="Tekst oglasa"
            />
</LinearLayout>

    <LinearLayout
        android:id="@+id/col1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/col11">
        <TextView
            android:id="@+id/tvGradLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokacija:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBrojPozicijaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj pozicija:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDatumObjaveLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum objave:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvDatumIstekaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum isteka:"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Broj kandidata:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/col12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGradValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokacija"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBrojPozicijaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvDatumObjaveValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31.01.2018"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvDatumIstekaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.02.2018"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/brojPrijavljenihKand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
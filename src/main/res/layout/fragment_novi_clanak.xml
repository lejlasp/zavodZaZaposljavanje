<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:text="Dodavanje novog Älanka"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="22dp"
        android:layout_marginTop="57dp"
        android:text="Naslov"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/editTextNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/textView8"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTekst"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignStart="@+id/editTextNaslov"
        android:layout_below="@+id/editTextNaslov"

        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:singleLine="false" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextTekst"
        android:layout_alignBottom="@+id/editTextTekst"
        android:layout_alignStart="@+id/textView8"
        android:text="Tekst"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/btnSpremi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextTekst"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:text="Spremi" />
</RelativeLayout>